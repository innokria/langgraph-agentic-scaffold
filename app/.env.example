# This is an example environment file. Copy it to .env and fill in your values.
# The .env file should be added to .gitignore and NOT be committed to version control.

# --- General Configuration ---
# Choose the primary LLM provider for the application.
# Supported values: "gemini", "ollama", "lmstudio"
LLM_PROVIDER="gemini"

# --- Gemini Configuration ---
# Required if LLM_PROVIDER="gemini"
GOOGLE_API_KEY="YOUR_GEMINI_API_KEY_HERE"
GEMINI_MODEL="gemini-2.5-flash" # Or "gemini-2.5-pro", etc.

# --- Ollama Configuration ---
# Required if LLM_PROVIDER="ollama"
OLLAMA_MODEL="llama3" # The name of the model you have pulled in Ollama
OLLAMA_BASE_URL="http://localhost:11434"

# --- LM Studio Configuration ---
# Required if LLM_PROVIDER="lmstudio"
LMSTUDIO_MODEL="local-model" # This is often a placeholder in LM Studio
LMSTUDIO_BASE_URL="http://localhost:1234/v1"
